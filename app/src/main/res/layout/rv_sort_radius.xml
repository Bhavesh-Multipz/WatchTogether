<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp">

    <com.instaconnect.android.widget.RoundImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_185sdp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        app:cornerRadius="10dp"
        app:shapeAppearanceOverlay="@style/ImageView.Corner.Top"
        app:srcCompat="@drawable/main_bg" />

    <com.instaconnect.android.widget.RelativeViewLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_password_rounded_white_glass">

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="Sort By Radius"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:typeFace="@string/bold" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:progressDrawable="@drawable/radious_seek_bar"
            android:layout_marginRight="@dimen/_16sdp"
            android:max="250"
            android:min="1"
            android:padding="@dimen/_26sdp"
            android:progressTint="@color/white"
            android:thumbTint="@color/white" />

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvRadius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radius"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            app:typeFace="@string/regular" />

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRadius"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:background="@drawable/layout_rounded_white_glass"
            android:paddingHorizontal="@dimen/_30sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:typeFace="@string/bold" />

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRadius"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:background="@drawable/layout_rounded_white_glass"
            android:paddingHorizontal="@dimen/_30sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:typeFace="@string/bold" />

    </com.instaconnect.android.widget.RelativeViewLayout>

</RelativeLayout>