<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Hyperlink or URL"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12sdp"
            app:typeFace="@string/bold"
            android:layout_marginTop="@dimen/_20sdp"/>

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gain Worldwide Exposure"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_10sdp"
            app:typeFace="@string/regular"/>


      <com.instaconnect.android.widget.BasicEditText
          android:id="@+id/etLink"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColorHint="@color/grey"
          android:padding="8dp"
          android:layout_margin="@dimen/_14sdp"
          android:textColor="@color/black"
          android:inputType="textUri"
          android:background="@drawable/square_transparent_outline"
          android:hint="Link"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey"/>
        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:gravity="center"
            android:background="@drawable/underline_grey"
            android:padding="14dp"
            android:textColor="@color/sky_blue"/>

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/underline_grey"
            android:textColor="@color/sky_blue"/>

        <com.instaconnect.android.widget.BasicTextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center"
            android:padding="14dp"
            android:textColor="@color/sky_blue"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>